{
   "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2017",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "plugins": [
         {
            "name": "tslint-language-service"
         }
      ]
   },
   "include": [
      "./src/**/*"
   ],
   "exclude": [
      "node_modules"
   ],
   "compileOnSave": true,
   "watch": true,
}
